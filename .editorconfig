# EditorConfig is awesome: https://EditorConfig.org

root = true

# All files
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# F# files
[*.{fs,fsx,fsi}]
indent_style = space
indent_size = 4
end_of_line = crlf

# XML project files
[*.{fsproj,csproj,vbproj,proj,projitems,shproj}]
indent_style = space
indent_size = 2
end_of_line = crlf

# JSON files
[*.json]
indent_style = space
indent_size = 2
end_of_line = crlf

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
end_of_line = crlf

# Markdown files
[*.md]
indent_style = space
indent_size = 2
end_of_line = crlf

# Config files
[*.{config,paket.dependencies,paket.lock,lock.json}]
indent_style = space
indent_size = 2
end_of_line = crlf

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Batch files
[*.{cmd,bat}]
indent_style = space
indent_size = 2
end_of_line = crlf
